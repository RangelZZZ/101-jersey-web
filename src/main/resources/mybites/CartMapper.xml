<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="school.thoughtworks.pos.mapper.CartMapper">

    <resultMap id="cartMap" type="school.thoughtworks.pos.bean.Cart">
        <id property="id" column="id"></id>
        <result column="name" property="name"></result>
    </resultMap>

    <select id="getCartById" resultMap="cartMap" parameterType="java.lang.Integer">
        select * from cart where id = #{id};
    </select>

    <insert id="insertCart" keyProperty="id" useGeneratedKeys="true">
        insert into cart(userName) values(#{userName});
    </insert>
</mapper>